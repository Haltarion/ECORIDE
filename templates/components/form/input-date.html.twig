{% set required = required|default(false) %}

<div class="form-group f-col al-start w-100 mb-8">
  <label for="{{ inputDateId }}">{{ labelDate }}</label>
  <input
    type="date"
    id="{{ inputDateId }}"
    name="{{ inputDateName }}"
    value="{{ value|default('') }}"
    class="input"
    required
  >
  {# Inclusion du message dâ€™alerte si le champ est requis et vide #}
  <div class="error-message hidden">
    {% include 'components/form/error-alerte.html.twig' with { alertMessage: alertMessage } %}
  </div>
</div>