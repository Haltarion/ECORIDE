<div class="card-covoit container b-1 b-secondary r-15 g-1">

  {# Partie haute de la carte #}
  <div class="infos-voyage f-row f-w al-center just-sa g-25">
    {# Départ / arrivée #}
    {% include 'components/covoiturage/depart-arrive.html.twig' with {
      villeDepart: villeDepart,
      dateDepart: dateDepart,
      heureDepart: heureDepart,
      villeArrivee: villeArrivee,
      dateArrivee: dateArrivee,
      heureArrivee: heureArrivee
    } %}

    {# Prix #}
    {% include 'components/covoiturage/prix.html.twig' with {
      valeur: valeur
    } %}

    {# Places restantes #}
    {% include 'components/icone/nbPlacesRestantes.html.twig' with {
      nbPlaces: nbPlaces
    } %}
  </div>

  {# Séparateur #}
  <div class="infos-voyage__separator w-100 bg-secondary" role="img" aria-label="séparateur"></div>

  {# Partie basse de la carte #}
  <div class="infos-voiture f-row al-center just-sa g-20 h-100">

    {# Bouton Annuler #}
    <button class="btn btn-annul">Annuler</button>

    {# Bouton démarrage/arrivé à destination #}
    <button class="btn btn-main">Démarrer</button>
  </div>

</div>
